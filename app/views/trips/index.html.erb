<% unless notice.nil? %>
<div id="notice" class="ui green raised segment"><%= notice %></div>
<% end %>

<%= link_to new_trip_path do %>
  <button class="fluid ui primary button">
    <i class="car icon"></i>Nouveau Trajet
  </button>
<% end %>

<h3>Liste de mes Trajets</h3>
<div class="ui relaxed divided items">
  <% @trips.each do |trip| %>
    <div class="item">
      <i class="big circular inverted car middle aligned icon <%= icon_color trip.status %>"></i>
      <div class="content">
        <%= link_to trip, class: :header do %><%= trip.departure %> - <%= trip.destination %><% end %>
        <div class="description"><%= trip.uid %> / Etat: <%= trip.status %></div>
      </div>
      <div>
          <%= link_to trip do %>
              <button class="ui button">
                  <i class="external square alternate icon"></i>Consulter
              </button>
          <% end %>
          <%= link_to trip, method: :delete, data: { confirm: 'ÃŠtes-vous certain de vouloir supprimer ce Trajet ?' } do %>
              <button class="ui button">
                  <i class="trash icon"></i>Supprimer
              </button>
          <% end %>
      </div>
    </div>
  <% end %>
</div>
